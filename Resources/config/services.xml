<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="global.class">Palleas\LifestreamBundle\Service\Lifestream</parameter>
        <parameter key="lastfm.class">Palleas\LifestreamBundle\Service\LastFmAPI</parameter>
        <parameter key="flickr.class">Palleas\LifestreamBundle\Service\FlickRAPI</parameter>

        <!-- generic api key, plz use your own as this one may become unavailable -->
        <parameter key="lastfm.key">b25b959554ed76058ac220b7b2e0a026</parameter>
        <parameter key="lastfm.username">Palleas</parameter>
    </parameters>

    <services>
        <service id="lifestream" class="%global.class%">
            <argument type="service" id="doctrine.orm.entity_manager" />
        </service>


        <service id="lifestream.lastfm" class="%lastfm.class%">
            <argument>%lastfm.key%</argument>
            <argument>%lastfm.username%</argument>
        </service>
        
        <service id="lifestream.flickr" class="%flickr.class%" />
    </services>
</container>